@model IEnumerable<DoctorAppointment.Models.Prescription>

@{
    ViewData["Title"] = "Prescription";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="breadcrumb-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-12 col-12">
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a>Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Prescription</li>
                        </ol>
                    </nav>
                    <h2 class="breadcrumb-title">Prescription</h2>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="card">
        <div class="card-body pt-0">
            <div class="tab-content pt-0">
                <div class="tab-pane fade show active">
                    <div class="card card-table mb-0">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover table-center mb-0">
                                    <thead>
                                        <tr>                                          
                                            <th>Date</th>
                                            <th>Name</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.PrescriptionDate.ToString("M/d/yyyy")</td>
                                                <td>@item.Name</td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </div>
</div>

