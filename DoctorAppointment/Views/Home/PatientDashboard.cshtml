@model DoctorAppointment.DTO.UserDto
@{
    ViewData["Title"] = "PatientDashboard";
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}

<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="breadcrumb-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-12 col-12">
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a >Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Patient Dashboard</li>
                        </ol>
                    </nav>
                    <h2 class="breadcrumb-title">Patient Dashboard</h2>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="card">
        <div class="card-body">
            <form asp-action="PatientDashboard" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Image" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="dtId" />
                <div class="row form-row">
                    <div class="col-12 col-md-12">
                        <div class="form-group">
                            <div class="change-avatar">
                                <div class="profile-img">
                                    <img src="~/UserImage/@Model.Image" alt="User Image">
                                </div>
                                <div class="upload-img">
                                    <div class="change-photo-btn">
                                        <span><i class="fa fa-upload"></i> Upload Photo</span>
                                        <input type="file" class="upload">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" class="form-control" asp-for="FirstName">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" class="form-control" asp-for="LastName">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <div>
                                <input type="date" class="form-control" asp-for="DOB">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Blood Group</label>
                            <input type="text" class="form-control" asp-for="BloodGroup">

                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Email ID</label>
                            <input type="email" class="form-control" asp-for="Email" readonly>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Mobile</label>
                            <input type="number" asp-for="PhoneNumber" class="form-control">
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" class="form-control" asp-for="Adress">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" class="form-control" asp-for="City">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>State</label>
                            <input type="text" class="form-control" asp-for="State">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Zip Code</label>
                            <input type="text" class="form-control" asp-for="PostalCode">
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label>Country</label>
                            <input type="text" class="form-control" asp-for="Country">
                        </div>
                    </div>
                </div>
                <div class="submit-section">
                    <button type="submit" class="btn btn-primary submit-btn">Save Changes</button>
                </div>
            </form>


        </div>
    </div>
</div>

