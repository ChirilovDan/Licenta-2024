@model DoctorAppointment.Models.Specialities
@{
    ViewData["Title"] = "Specialities Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-sm-7 col-auto">
                    <h3 class="page-title">Specialities</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Specialities Edit</li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="SpecialitiesEdit" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Image" />
                            <div class="text-danger" asp-validation-summary="ModelOnly">

                            </div>
                            <span class="text-danger" asp-validation-for="Name"></span>


                            <div class="col-12 ">
                                <div class="form-group">
                                    <label>Specialities</label>
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                                </div>
                            </div>
                           
                            <div class="col-12 ">
                                <div class="form-group">
                                    <label>Old Image</label>
                                    <br />
                                    <img class="avatar-img" src="~/specialities/@Model.Image" alt="Speciality">
                                </div>
                            </div>
                            <span class="text-danger" asp-validation-for="Image"></span>
                            <div class="col-12 ">
                                <div class="form-group">
                                    <label>Image</label>
                                    <input type="file" asp-for="ProductFile" class="form-control">
                                </div>
                            </div>


                            <button type="submit" style="margin-top:60px" class="btn btn-primary">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




