@model IEnumerable<DoctorAppointment.ViewModel.AppointmentViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}

<div class="col-md-7 col-lg-8 col-xl-9">

    <div class="breadcrumb-bar">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-12 col-12">
                    <nav aria-label="breadcrumb" class="page-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a>Doctor</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Patient Appoinment</li>
                        </ol>
                    </nav>
                    <h2 class="breadcrumb-title">Patient Appoinment</h2>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="appointment-tab">
                <div class="tab-content">
                    <div class="tab-pane show active" id="upcoming-appointments">
                        <div class="card card-table mb-0">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-center mb-0">
                                        <thead>
                                            <tr>
                                                <th>Doctor</th>
                                                <th>Appt Date</th>
                                                <th>Booking Date</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                                <th>Prescriptions</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <h2 class="table-avatar">
                                                            <a class="avatar avatar-sm mr-2">
                                                                <img class="avatar-img rounded-circle" src="~/UserImage/@item.Image" alt="User Image">
                                                            </a>
                                                            <a>@item.Name <span>@item.Special</span></a>
                                                        </h2>
                                                    </td>
                                                    <td>@item.Time <span class="d-block text-info">@item.BookingDate</span></td>
                                                    <td>@item.AppointmentDate.ToString("M/d/yyyy")</td>
                                                    <td>$@item.Amount.ToString("0")</td>

                                                    <td><span class="badge badge-pill bg-success-light">@item.Status</span></td>
                                                    <td ><a asp-action="Prescriptions" class="btn btn-primary" asp-route-id="@item.PatientId"> Prescriptions History</a></td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Upcoming Appointment Tab -->


                </div>
            </div>
        </div>
    </div>

</div>
